@using Models;
@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação de apagar o usuário";
}
<div class="text-center">
    <h3>Realmente deseja apagar o usuario @Model.Nome ?</h3>
</div>
<div class="d-grid gap-1">
    <a class="btn btn-primary" role="button" asp-controller="Usuario" asp-action="Index">Cancelar</a>
    <a class="btn btn-danger" role="button" asp-controller="Usuario" asp-action="Apagar"  asp-route-id="@Model.Id">Confirmar exclusão</a>
</div>